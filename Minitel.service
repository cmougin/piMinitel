[Unit]
Description=How-To Geek Service Example https://www.howtogeek.com/687970/how-to-run-a-linux-program-at-startup-with-systemd/

Wants=network.target
After=syslog.target network-online.target

[Service]
Type=simple
ExecStart=/usr/local/bin/Minitel.sh
Restart=on-failure
RestartSec=10
KillMode=process

[Install]
WantedBy=multi-user.target